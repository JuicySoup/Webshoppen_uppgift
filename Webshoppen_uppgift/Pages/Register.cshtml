@page
@model Webshoppen_uppgift.Pages.RegisterModel
@{
}

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                                <img src="images/icon/logo2.png" alt="WebbShop">
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="Username">Username</label>
                                    <input class="au-input au-input--full" asp-for="Username" type="text" placeholder="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input class="au-input au-input--full" asp-for="Password" type="password" placeholder="Password">
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="aggree">Agree the terms and policy
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
                            </form>
                            <div class="register-link">
                                <p>
                                    Already have account?
                                    <a asp-page="Login">Sign In</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
